@page "/unauthorized"
@inject NavigationManager NavigationManager

<PageTitle>Unauthorized Access</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">
                        <i class="bi bi-shield-exclamation me-2"></i> Unauthorized Access
                    </h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h4 class="mb-3">You don't have permission to access this resource.</h4>
                    <p class="mb-4">
                        Sorry, but you don't have the necessary permissions to view this page. 
                        If you believe this is an error, please contact your administrator.
                    </p>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button class="btn btn-outline-secondary" @onclick="NavigateToLogin">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void GoBack()
    {
        NavigationManager.NavigateTo("javascript:history.back()");
    }
}